---
import Layout from "../../layouts/Layout.astro";
import { getCollection, render } from "astro:content";

export const prerender = true;

export async function getStaticPaths() {
    const majors = await getCollection("majors");
    return majors.map((major) => ({
        params: { slug: major.id },
        props: { major },
    }));
}

const { major } = Astro.props;
const { Content } = await render(major);
---

<Layout title={major.data.name}>
    <div class="relative py-20 bg-primary overflow-hidden">
        <div class="absolute inset-0 bg-black/20"></div>
        <div class="container mx-auto px-4 relative z-10 text-center">
            <div
                class="w-24 h-24 bg-white rounded-full p-4 mx-auto mb-6 shadow-xl"
            >
                <img
                    src={major.data.icon}
                    alt={major.data.name}
                    class="w-full h-full object-contain"
                />
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-surface mb-4">
                {major.data.name}
            </h1>
            <p class="text-surface text-xl font-light">
                {major.data.description}
            </p>
        </div>
    </div>

    <section class="py-16">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
                <!-- Main Content -->
                <div class="lg:col-span-2">
                    <div
                        class="bg-white rounded-2xl shadow-sm p-8 border border-gray-100 mb-8 prose prose-lg max-w-none prose-headings:text-primary prose-a:text-secondary"
                    >
                        <Content />
                    </div>

                    {
                        major.data.facilities &&
                            major.data.facilities.length > 0 && (
                                <div class="mb-12">
                                    <h2 class="text-2xl font-bold text-primary mb-6 flex items-center gap-3">
                                        <svg
                                            class="w-6 h-6"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                                            />
                                        </svg>
                                        Fasilitas Pembelajaran
                                    </h2>
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        {major.data.facilities.map((fac) => (
                                            <div class="relative group overflow-hidden rounded-xl aspect-video">
                                                <img
                                                    src={fac.image}
                                                    alt={fac.name}
                                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                                />
                                                {fac.name && (
                                                    <div class="absolute bottom-0 left-0 right-0 bg-black/60 p-3">
                                                        <p class="text-surface text-sm font-medium">
                                                            {fac.name}
                                                        </p>
                                                    </div>
                                                )}
                                            </div>
                                        ))}
                                    </div>
                                </div>
                            )
                    }
                </div>

                <!-- Sidebar -->
                <div class="space-y-8">
                    <div
                        class="bg-white rounded-2xl shadow-lg p-6 border border-gray-100"
                    >
                        <h3
                            class="font-bold text-xl text-primary mb-4 border-b pb-2"
                        >
                            Informasi Jurusan
                        </h3>
                        <ul class="space-y-4">
                            {
                                major.data.headOfProgram && (
                                    <li class="flex items-start gap-4">
                                        <div class="bg-primary/10 p-2 rounded-lg text-primary">
                                            <svg
                                                class="w-5 h-5"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                                                />
                                            </svg>
                                        </div>
                                        <div>
                                            <span class="block text-sm text-gray-500">
                                                Kepala Program
                                            </span>
                                            <span class="font-semibold text-gray-800">
                                                {major.data.headOfProgram}
                                            </span>
                                        </div>
                                    </li>
                                )
                            }
                            <li class="flex items-start gap-4">
                                <div
                                    class="bg-primary/10 p-2 rounded-lg text-primary"
                                >
                                    <svg
                                        class="w-5 h-5"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                        ><path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"
                                        ></path></svg
                                    >
                                </div>
                                <div>
                                    <span class="block text-sm text-gray-500"
                                        >Singkatan</span
                                    >
                                    <span class="font-semibold text-gray-800"
                                        >{major.data.abbreviation}</span
                                    >
                                </div>
                            </li>
                        </ul>
                    </div>

                    {
                        major.data.careerProspects &&
                            major.data.careerProspects.length > 0 && (
                                <div class="bg-gradient-to-br from-primary to-secondary text-surface rounded-2xl shadow-lg p-6">
                                    <h3 class="font-bold text-xl mb-4 border-b border-white/20 pb-2">
                                        Prospek Karir
                                    </h3>
                                    <ul class="space-y-2">
                                        {major.data.careerProspects.map(
                                            (job) => (
                                                <li class="flex items-center gap-2">
                                                    <svg
                                                        class="w-5 h-5 text-surface"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        viewBox="0 0 24 24"
                                                    >
                                                        <path
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            stroke-width="2"
                                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                                        />
                                                    </svg>
                                                    <span>{job}</span>
                                                </li>
                                            ),
                                        )}
                                    </ul>
                                </div>
                            )
                    }

                    <div class="text-center">
                        <a
                            href="/pendaftaran"
                            class="block w-full py-4 bg-secondary font-bold rounded-xl shadow-lg hover:shadow-xl hover:bg-secondary/90 transition-all transform hover:-translate-y-1"
                        >
                            <p class="text-surface">Daftar Jurusan Ini</p>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</Layout>
