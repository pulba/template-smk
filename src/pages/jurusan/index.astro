---
import Layout from "../../layouts/Layout.astro";
import MajorCard from "../../components/MajorCard.astro";
import { getCollection } from "astro:content";

const majors = await getCollection("majors");
---

<Layout title="Jurusan & Kompetensi Keahlian">
    <section class="py-20 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="text-center mb-16">
                <h1 class="text-4xl md:text-5xl font-bold text-primary mb-6">
                    Program Keahlian
                </h1>
                <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                    Pilihan jurusan terbaik dengan fasilitas modern untuk
                    mempersiapkan masa depan gemilang di dunia industri.
                </p>
                <div class="flex items-center justify-center gap-2 mt-6">
                    <div class="h-1 w-20 bg-primary rounded-full"></div>
                    <div class="h-2 w-2 bg-secondary rounded-full"></div>
                    <div class="h-1 w-20 bg-primary rounded-full"></div>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    majors.map((major) => (
                        <MajorCard
                            title={major.data.name}
                            slug={major.id}
                            icon={major.data.icon}
                            description={major.data.description || ""}
                        />
                    ))
                }
            </div>
        </div>
    </section>
</Layout>
