---
import Layout from "../layouts/Layout.astro";
import { getCollection, render } from "astro:content";

// Mengambil data dari collection bkk yang menggunakan loader (Astro 5+)
// Karena loader: glob menghasilkan array entries, kita ambil entry pertama.
const bkkEntries = await getCollection("bkk");
const bkkData = bkkEntries[0];

if (!bkkData) {
    throw new Error(
        "Data BKK tidak ditemukan. Pastikan ada file markdown di src/content/bkk/",
    );
}

const { Content } = await render(bkkData);
const { title, jobListings } = bkkData.data;
---

<Layout title={title}>
    <!-- Hero Section -->
    <section class="relative py-24 bg-primary overflow-hidden">
        <div class="absolute inset-0 bg-[url('/pattern.svg')] opacity-10"></div>
        <div class="container mx-auto px-4 relative z-10 text-center">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-6">
                {title}
            </h1>
            <p class="text-xl text-white/90 max-w-2xl mx-auto">
                Menjembatani lulusan SMK dengan dunia usaha dan industri.
            </p>
        </div>
    </section>

    <div class="container mx-auto px-4 py-12 -mt-16 relative z-20">
        <div class="bg-white rounded-2xl shadow-xl p-8 mb-12">
            <article
                class="prose prose-lg max-w-none prose-headings:text-primary prose-a:text-secondary"
            >
                <Content />
            </article>
        </div>

        {/* Lowongan Kerja Section */}
        <div class="mb-12">
            <div class="flex items-center justify-between mb-8">
                <h2 class="text-3xl font-bold text-primary">
                    Lowongan Kerja Terbaru
                </h2>
                <div class="h-1 flex-1 bg-gray-200 ml-6 rounded-full"></div>
            </div>

            {
                jobListings && jobListings.length > 0 ? (
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        {jobListings.map((job) => (
                            <div class="bg-white rounded-xl shadow-md border hover:shadow-lg transition-all p-6 flex flex-col">
                                <div class="flex items-start justify-between mb-4">
                                    <div>
                                        <h3 class="text-xl font-bold text-gray-800">
                                            {job.position}
                                        </h3>
                                        <p class="text-secondary font-medium">
                                            {job.company}
                                        </p>
                                    </div>
                                    <span class="bg-green-100 text-green-700 text-xs px-3 py-1 rounded-full font-bold uppercase tracking-wide">
                                        Active
                                    </span>
                                </div>

                                <div class="space-y-3 mb-6 text-sm text-gray-600">
                                    <div class="flex items-center gap-2">
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                            />
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                            />
                                        </svg>
                                        {job.location ||
                                            "Lokasi tidak disebutkan"}
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <svg
                                            class="w-4 h-4"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                                            />
                                        </svg>
                                        Deadline: {job.deadline || "-"}
                                    </div>
                                </div>

                                <div class="mt-auto pt-4 border-t">
                                    <a
                                        href={job.link || "#"}
                                        target="_blank"
                                        class="block text-center w-full py-2 border-2 border-primary text-primary font-bold rounded-lg hover:bg-primary hover:text-white transition-colors"
                                    >
                                        Lamar Sekarang
                                    </a>
                                </div>
                            </div>
                        ))}
                    </div>
                ) : (
                    <div class="bg-gray-50 rounded-xl p-8 text-center border-2 border-dashed border-gray-200">
                        <p class="text-gray-500 font-medium">
                            Belum ada lowongan kerja tersedia saat ini.
                        </p>
                    </div>
                )
            }
        </div>
    </div>
</Layout>
