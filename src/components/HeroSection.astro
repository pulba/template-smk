---
//src/components/HeroSection.astro
import { getCollection } from 'astro:content';

const settingsData = await getCollection('settings');
const settings = settingsData[0]?.data;

const slider = settings?.slider || {};
const images = slider.images || [
  { url: 'https://images.unsplash.com/photo-1580582932707-520aed937b7b?q=80&w=1032&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' },
  { url: 'https://images.unsplash.com/photo-1591123120675-6f7f1aae0e5b?q=80&w=869&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' },
  { url: 'https://images.unsplash.com/photo-1714192833473-3271b3561c95?q=80&w=870&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' },
];

const overlay = slider.overlay || { 
  color: '#000000', 
  opacity: '0.7'
};

const schoolInfo = slider.schoolInfo || { 
  name: 'SMK NEGERI 1', 
  city: 'Semarang', 
  motto: 'sekolah maju untuk dunia akhirat',
  welcomeMessage: 'Selamat Datang di Website Kami',
  accreditation: 'A'
};

interface TextSettings {
  color?: string;
  fontSize?: string;
  fontFamily?: string;
}

const textSettings: TextSettings = (schoolInfo as any)?.textSettings || {};
const animation = slider.animation || { autoSlide: true, slideInterval: 3000, marqueeSpeed: 15 };

const sliderId = `hero-slider-${Math.random().toString(36).substring(2, 11)}`;

const ppdbCollection = await getCollection('pendaftaran');
const ppdbData = ppdbCollection[0]?.data?.datappdb;
const ppdbText = ppdbData?.ppdbAlias || "PPDB";
---

<div class="splide splide-hero" id={sliderId}>
  <div class="splide__track">
    <ul class="splide__list">
      {images.map((image, index) => {
        return (
          <li class="splide__slide" data-index={index}>
            <div class="relative h-screen w-full overflow-hidden">
              <!-- Background Image -->
              <img 
                src={image.url} 
                class="absolute inset-0 w-full h-full object-cover"
                alt={image.alt || `Hero Image ${index + 1}`}
                loading={index === 0 ? 'eager' : 'lazy'}
                width="1920"
                height="1080"
              />
              
              <!-- Responsive Overlay -->
              <div 
                class="absolute inset-0 bg-gradient-to-t from-black/85 via-black/70 to-black/40 md:bg-gradient-to-r md:from-black/80 md:via-black/60 md:to-transparent"
                aria-hidden="true"
              ></div>
              
              <!-- Content Container -->
              <div class="absolute inset-0 flex items-center justify-center md:justify-start">
                <div class="container mx-auto px-6 md:px-12 lg:px-16">
                  <div class="max-w-2xl text-center md:text-left mx-auto md:mx-0">
                    <!-- School Name -->
                    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-surface mb-2 md:mb-3 leading-tight">
                      {schoolInfo.name}
                    </h1>
                    
                    <!-- City -->
                    <h2 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-semibold text-secondary mb-4 md:mb-6">
                      {schoolInfo.city}
                    </h2>
                    
                    <!-- Motto/Description -->
                    <p class="text-base sm:text-lg md:text-xl text-surface mb-6 md:mb-8 leading-relaxed max-w-xl mx-auto md:mx-0 px-4 md:px-0">
                      {schoolInfo.motto}
                    </p>
                    
                    <!-- Accreditation Badge -->
                    {schoolInfo.accreditation && (
                      <div class="mb-6 md:mb-8 flex justify-center md:justify-start">
                        <span class="inline-flex items-center gap-2 px-4 md:px-5 py-2 md:py-2.5 rounded-lg bg-yellow-500/20 border border-yellow-400/30 backdrop-blur-sm">
                          <svg class="w-4 h-4 md:w-5 md:h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                          </svg>
                          <span class="font-semibold text-yellow-400 text-xs md:text-sm uppercase tracking-wide">{schoolInfo.accreditation}</span>
                        </span>
                      </div>
                    )}
                    
                    <!-- CTA Buttons -->
                    <div class="flex flex-col sm:flex-row justify-center md:justify-start gap-3 md:gap-4 px-4 md:px-0">
                      <a 
                        href="/about" 
                        class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 md:px-8 py-3 md:py-3.5 bg-white text-primary rounded-lg font-semibold text-sm md:text-base hover:bg-gray-100 transition-all duration-300 shadow-lg hover:shadow-xl"
                      >
                        <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span>Profil Sekolah</span>
                      </a>
                      
                      <a 
                        href="/pendaftaran" 
                        class="w-full sm:w-auto inline-flex items-center justify-center gap-2 px-6 md:px-8 py-3 md:py-3.5 bg-secondary rounded-lg font-semibold text-sm md:text-base hover:bg-primary transition-all duration-300 shadow-lg hover:shadow-xl"
                      >
                        <svg class="text-surface w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                        </svg>
                        <span class="text-surface ">{ppdbText}</span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Mobile Scroll Indicator -->
              <div class="md:hidden absolute bottom-8 left-1/2 -translate-x-1/2 z-30 animate-bounce">
                <svg class="w-6 h-6 text-surface" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
                </svg>
              </div>
            </div>
          </li>
        );
      })}
    </ul>
  </div>
  
  <!-- Navigation Arrows -->
  <div class="splide__arrows">
    <button class="splide__arrow splide__arrow--prev" aria-label="Previous slide">
      <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    </button>
    <button class="splide__arrow splide__arrow--next" aria-label="Next slide">
      <svg class="w-5 h-5 md:w-6 md:h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </button>
  </div>
  
  <!-- Pagination Dots -->
  <ul class="splide__pagination" role="tablist"></ul>
</div>

<style>
  /* Hero Slider Base */
  .splide-hero {
    position: relative;
    height: 100vh;
    overflow: hidden;
  }
  
  .splide-hero .splide__slide {
    position: relative;
    height: 100vh;
  }

  /* Navigation Arrows - Responsive */
  .splide-hero .splide__arrows {
    display: flex;
  }

  .splide-hero .splide__arrow {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    width: 44px;
    height: 44px;
    border-radius: 50%;
    transition: all 0.3s ease;
    opacity: 0.9;
  }
  
  .splide-hero .splide__arrow:hover {
    background: rgba(255, 255, 255, 0.25);
    opacity: 1;
    transform: scale(1.05);
  }

  .splide-hero .splide__arrow--prev {
    left: 12px;
  }

  .splide-hero .splide__arrow--next {
    right: 12px;
  }

  /* Pagination Dots - Responsive */
  .splide-hero .splide__pagination {
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
  }
  
  .splide-hero .splide__pagination__page {
    background: rgba(255, 255, 255, 0.5);
    width: 8px;
    height: 8px;
    border-radius: 50%;
    transition: all 0.3s ease;
    padding: 0;
    border: none;
  }
  
  .splide-hero .splide__pagination__page.is-active {
    background: white;
    width: 24px;
    border-radius: 4px;
  }
  
  .splide-hero .splide__pagination__page:hover {
    background: rgba(255, 255, 255, 0.8);
  }

  /* Desktop Styles */
  @media (min-width: 768px) {
    .splide-hero .splide__arrow {
      width: 52px;
      height: 52px;
    }

    .splide-hero .splide__arrow--prev {
      left: 24px;
    }

    .splide-hero .splide__arrow--next {
      right: 24px;
    }

    .splide-hero .splide__pagination {
      bottom: 32px;
      gap: 10px;
    }

    .splide-hero .splide__pagination__page {
      width: 10px;
      height: 10px;
    }

    .splide-hero .splide__pagination__page.is-active {
      width: 32px;
      border-radius: 5px;
    }
  }

  /* Smartphone Portrait - Extra Small */
  @media (max-width: 360px) {
    .splide-hero .splide__arrow {
      width: 38px;
      height: 38px;
    }

    .splide-hero .splide__arrow--prev {
      left: 8px;
    }

    .splide-hero .splide__arrow--next {
      right: 8px;
    }
  }
</style>
